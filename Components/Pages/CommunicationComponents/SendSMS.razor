@page "/sendsms"

<PageTitle>Send_SMS</PageTitle>

    <RadzenRow AlignItems="AlignItems.Center">
        <RadzenColumn Size="12" SizeMD="6">
            <RadzenText Text="Send SMS" TextStyle="TextStyle.H6" TagName="TagName.H1" style="margin:0; font-size:13px" />
        </RadzenColumn>
    </RadzenRow>

     <RadzenAlert Shade="Shade.Lighter" Variant="Variant.Flat" Size="AlertSize.Small" AlertStyle="AlertStyle.Danger" Visible="@errorVisible">Error while sending sms</RadzenAlert>
    <RadzenTemplateForm TItem="Destination.Models.destinationTest.Smstemplate" Data="@(smsTemplate)" Visible="@(smsTemplate != null)" Submit="@FormSubmit" Style="margin-top:10px !important">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Action" Component="CleanerId" style="width: 100%;font-weight:bold" />
                <RadzenDropDown Data="@smsTemplates" TextProperty="StrTemplateName" ValueProperty="TemplateId"
                                Placeholder="Select Template" style="display: block; width: 100%" @bind-Value="@(smsTemplate.TemplateId)" Name="TemplateId" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="6">
                <RadzenLabel Text="Custom Message to Send:" Component="StrTemplateContent" style="width: 100%;font-weight:bold" />
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(smsTemplate.StrTemplateContent)" Name="StrTemplateContent" Rows="10" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Text="Send SMS" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenTemplateForm>
