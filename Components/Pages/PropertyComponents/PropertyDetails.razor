@page "/property-details"

<RadzenRow AlignItems="AlignItems.Center" Style="margin-bottom:10px">
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenText Text="@propName" TextStyle="TextStyle.H6" TagName="TagName.H1" style="margin:0; font-size:13px" />
    </RadzenColumn>
    <RadzenColumn Size="12" SizeMD="6">
        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
        </RadzenStack>
    </RadzenColumn>
</RadzenRow>
<RadzenCard>
    <RadzenTemplateForm TItem="Property" Data=@property Submit="@((Property args) => { Submit(args); })">
        <!-- Row 1 -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="3">
                <RadzenLabel Text="Status (req.)" Component="Status" />
                <RadzenDropDown @bind-Value="@(property.Status)" 
                                Data="@(statusesForStatus)" 
                                ValueProperty="StatusId"
                                TextProperty="StatusName"
                                Placeholder="Choose Status"
                                Name="Status"
                                Style="width: 100%" />
                <RadzenRequiredValidator Component="Status" Text="Status is required" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Owner" Component="Owner" />
                <RadzenDropDown @bind-Value="@(property.Agentid)" 
                                Data="@(agentsForAgentid)"
                                ValueProperty="AgID"
                                TextProperty="Name"
                                Placeholder="Choose Agent"
                                Name="Agentid"
                                Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Property Type" Component="PropertyType" />
                <RadzenDropDown @bind-Value="@property.PropertyType" 
                                Data="@(propertyTypes)" 
                                ValueProperty="TypeId"
                                TextProperty="Type"
                                Placeholder="Choose Property Type"
                                Name="PropertyType"
                                Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Name" Component="Name" />
                <RadzenTextBox @bind-Value="@property.Name" 
                               Style="width: 100%" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Row 3 -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="3">
                <RadzenLabel Text="Zip" Component="Zip" />
                <RadzenTextBox @bind-Value="@property.Zip" 
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Bedrooms" Component="Bedrooms" />
                <RadzenTextBox @bind-Value="@property.Bedrooms"
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Neighborhood" Component="Neighborhood" />
                <RadzenTextBox @bind-Value="@property.Neighborhood" 
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Address" Component="Address" />
                <RadzenTextBox @bind-Value="@property.Address" 
                               Style="width: 100%" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Row 4 -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="3">
                <RadzenLabel Text="New Sleep" Component="SleepNum" />
                <RadzenNumeric @bind-Value="@property.SleepNum" ShowUpDown="false"
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Baths" Component="Baths" />
                <RadzenTextBox @bind-Value="@property.Baths" 
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Sleeps" Component="Sleeps" />
                <RadzenTextBox @bind-Value="@property.Sleeps" 
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Floors" Component="Floors" />
                <RadzenTextBox @bind-Value="@property.Floors" 
                               Style="width: 100%" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Row 5 -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="3">
                <RadzenLabel Text="Door Code" Component="Code" />
                <RadzenTextBox @bind-Value="@property.Code" 
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Alarm Code" Component="Alarmcode" />
                <RadzenTextBox @bind-Value="@property.Alarmcode" 
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Parking" Component="ParkingSpaces" />
                <RadzenTextBox @bind-Value="@property.ParkingSpaces"
                               Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="Garage" Component="GarageSize" />
                <RadzenTextBox @bind-Value="@property.GarageSize" Style="width: 100%" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Row 6 -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="3">
                <RadzenLabel Text="Square foot" Component="SquareFootage" />
                <RadzenTextBox @bind-Value="@property.SquareFootage" Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3">
                <RadzenLabel Text="City" Component="BbCity" />
                <RadzenTextBox @bind-Value="@property.Bbcity" Style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn Size="3"></RadzenColumn>
        </RadzenRow>

        <RadzenRow Style="margin-bottom: 10px;">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="Update" Text="Save" Variant="Variant.Flat" />
                <RadzenButton ButtonStyle="ButtonStyle.Primary" Text="Cancel" Variant="Variant.Flat"/>
            </RadzenStack>
        </RadzenRow>
    </RadzenTemplateForm>
</RadzenCard>



