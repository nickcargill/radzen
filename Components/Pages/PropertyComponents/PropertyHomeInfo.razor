@page "/property-home-info"

<RadzenCard>
    <RadzenTemplateForm TItem="Property" Data=@property Submit="@((Property args) => { Submit(args); })">
        <!-- Error Panel -->
        <RadzenAlert Visible="@hasError" 
                    Text="@errorMessage" 
                    Style="color: red; margin-bottom: 20px;" />

        <!-- Row 1: Home Guide and Closing Instructions -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="6" Style="padding-right: 10px;">
                <RadzenLabel Text="Home Guide" />
                <RadzenHtmlEditor @bind-Value="@property.HomeGuide"
                 Style="height: 500px;" Input=@OnInput Change=@OnChange Paste=@OnPaste UploadComplete=@OnUploadComplete Execute=@OnExecute UploadUrl="upload/image"/>
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenLabel Text="Closing Instructions" />
                <RadzenHtmlEditor @bind-Value="@property.Closinginstructions"
                      Style="height: 500px;" Input=@OnInput Change=@OnChange Paste=@OnPaste UploadComplete=@OnUploadComplete Execute=@OnExecute UploadUrl="upload/image" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Row 2: Maintenance and Private Instructions -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="6">
                <RadzenLabel Text="Private Instructions Or New Home Setup" />
                <RadzenHtmlEditor @bind-Value="@property.Private"
                    Style="height: 350px;" Input=@OnInput Change=@OnChange Paste=@OnPaste UploadComplete=@OnUploadComplete Execute=@OnExecute UploadUrl="upload/image" />
            </RadzenColumn>
            <RadzenColumn Size="6" Style="padding-right: 10px;">
                <RadzenLabel Text="Maintenance and Utility Info" />
                <RadzenTextArea @bind-Value="@property.InternalNotes"
                                Style="width: 100%; height: 200px;"
                                Rows="10"
                                Name="InternalNotes" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Action Button -->
        <RadzenRow Style="margin-bottom: 10px;">
            <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.Start" Gap="0.5rem">
                <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Icon="Update" Text="Save" Variant="Variant.Flat" />
                <RadzenButton ButtonStyle="ButtonStyle.Light" Text="Cancel" Variant="Variant.Flat" />
            </RadzenStack>
        </RadzenRow>
    </RadzenTemplateForm>
</RadzenCard>