@page "/property-home-info"

<RadzenCard>
    <RadzenTemplateForm TItem="PropertyInstructionsModel" Data=@propertyInstructionsModel Submit=@UpdateInstructions>
        <!-- Error Panel -->
        <RadzenAlert Visible="@hasError" 
                    Text="@errorMessage" 
                    Style="color: red; margin-bottom: 20px;" />

        <!-- Row 1: Home Guide and Closing Instructions -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="6" Style="padding-right: 10px;">
                <RadzenLabel Text="Home Guide" />
                <RadzenTextArea @bind-Value="@propertyInstructionsModel.HomeGuide" 
                               Style="width: 100%; height: 200px;"
                               Rows="10"
                               Name="HomeGuide" />
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenLabel Text="Closing Instructions" />
                <RadzenTextArea @bind-Value="@propertyInstructionsModel.ClosingInstructions" 
                               Style="width: 100%; height: 200px;"
                               Rows="10"
                               Name="ClosingInstructions" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Row 2: Maintenance and Private Instructions -->
        <RadzenRow Style="margin-bottom: 20px;">
            <RadzenColumn Size="6" Style="padding-right: 10px;">
                <RadzenLabel Text="Maintenance and Utility Info" />
                <RadzenTextArea @bind-Value="@propertyInstructionsModel.MaintenanceInfo" 
                               Style="width: 100%; height: 100px;"
                               Rows="5"
                               Name="MaintenanceInfo" />
            </RadzenColumn>
            <RadzenColumn Size="6">
                <RadzenLabel Text="Private Instructions Or New Home Setup" />
                <RadzenTextArea @bind-Value="@propertyInstructionsModel.PrivateInstructions" 
                               Style="width: 100%; height: 100px;"
                               Rows="5"
                               Name="PrivateInstructions" />
            </RadzenColumn>
        </RadzenRow>

        <!-- Action Button -->
        <RadzenRow>
            <RadzenColumn Size="12" Class="text-right">
                <RadzenButton ButtonType="ButtonType.Submit" 
                            Text="Update" 
                            ButtonStyle="ButtonStyle.Success" />
            </RadzenColumn>
        </RadzenRow>
    </RadzenTemplateForm>
</RadzenCard>