                <RadzenColumn SizeMD="9">
                    <RadzenCheckBox @bind-Value="@(propertyExpense.TenantDamage)" Name="TenantDamage" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
                <RadzenColumn SizeMD="3">
                    <RadzenLabel Text="Planned Date" Component="PlannedDate" style="width: 100%" />
                </RadzenColumn>
                <RadzenColumn SizeMD="9">
                    <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(propertyExpense.PlannedDate)" Name="PlannedDate" />
                </RadzenColumn>
            </RadzenRow>
            <RadzenRow style="margin-bottom: 1rem">
