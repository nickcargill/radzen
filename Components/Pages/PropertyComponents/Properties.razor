@page "/properties"


 <PageTitle>Properties</PageTitle> 

<RadzenStack>
    <RadzenRow>
        @if (!showCollapse)
        {
            <RadzenButton Icon="add" ButtonStyle="ButtonStyle.Light"
                      Click="@ShowCollapse" Style="height:24px;padding:0px !important; min-height:18px;min-width:25px"  />
        }
        @if (showleftPanel && selectedBookingId != 0)
        {
            <RadzenColumn SizeMD="3">
               <div class="custom-sidebar @(isCollapsed ? "collapsed" : "expanded")">
                    <RadzenCard Style="margin-top: 1px; position: relative;">

                        <!-- Remove/Hide Button inside the panel -->
                        <RadzenButton Icon="remove"
                                      Click="@HidePanel"
                                      ButtonStyle="ButtonStyle.Light" 
                                      Style="position: absolute; top: 0px; right: 0px; padding:0px !important; min-height:18px;min-width:25px" />

                        <RadzenTabs>
                            <Tabs>
                                <RadzenTabsItem Text="Edit Info">
                                    <EditBooking Id="@selectedBookingId"></EditBooking>
                                </RadzenTabsItem>
                                <RadzenTabsItem Text="Tenant" style="margin-left: 3px;">
                                </RadzenTabsItem>
                                <RadzenTabsItem Text="Notes" style="margin-left: 3px;">
                                </RadzenTabsItem>
                            </Tabs>
                        </RadzenTabs>
                    </RadzenCard>
                </div>
            </RadzenColumn>
        }
        <RadzenColumn SizeMD="@(showleftPanel == false ? 12 : 9)">
            <RadzenPanel AllowCollapse="true" class="rz-my-10 rz-mx-auto" style="margin-top: 0px !important;margin-bottom: 5px !important"
                Expand=@(() => Change("Panel expanded")) 
                Collapse=@(() => Change("Panel collapsed")) >
@*                 <RadzenRow AlignItems="AlignItems.Center" Style="margin-top: 5px; margin-bottom: 7px">
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenText Text="Properties" TextStyle="TextStyle.H3" TagName="TagName.H1" style="margin: 0" />
                    </RadzenColumn>
                    <RadzenColumn Size="12" SizeMD="6">
                        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
                            <RadzenButton Icon="add_circle_outline" Text="Add" Variant="Variant.Flat" />
                        </RadzenStack>
                    </RadzenColumn>
                </RadzenRow> *@
                <RadzenDataGrid @ref="grid0" ColumnWidth="200px" AllowFiltering="true" FilterMode="FilterMode.Advanced" AllowPaging="true" AllowSorting="true" ShowPagingSummary="true" PageSizeOptions=@(new int[]{5, 10, 20, 30})
                                Data="@(properties)" AllowColumnPicking="true"
                                PickedColumnsChanged="@PickedColumnsChanged"
                                ColumnsPickerAllowFiltering="true" TItem="Destination.Models.destinationTest.Property" Density="Radzen.Density.Compact">
                    <Columns>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Filterable="false" Property="Propid" Title="Propid" Width="70px">
                            <Template Context="item">
                                <span Text="Click here" @onclick="() => ShowTabs(item.Propid)" @oncontextmenu=@(e => ShowContextMenuWithItems(e, item)) @oncontextmenu:preventDefault="true"
                                    style="cursor: pointer; color: green; text-decoration: none;">@item.Propid</span>
                            </Template>
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Property="Address" Title="Address" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Property="City" Title="City" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Filterable="false" Property="Zip" Title="Zip" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Property="Agent.FirstName" Title="Agent" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Property="Bedrooms" Title="Bedrooms" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Filterable="false" Property="Baths" Title="Baths" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Filterable="false" Property="Status1.Status1" Title="Status1" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Filterable="false" Property="PropertyCleaner.BusLic" Title="Property Cleaner" Width="150px">
                        </RadzenDataGridColumn>
                        <RadzenDataGridColumn TItem="Destination.Models.destinationTest.Property" Filterable="false" Sortable="false" Width="70px" TextAlign="TextAlign.Center">
                            <Template Context="property">
                                <RadzenButton ButtonStyle="ButtonStyle.Danger" Icon="delete" Size="ButtonSize.Medium"
                                    Shade="Shade.Lighter" Variant="Variant.Flat"
                                    Click=@(args => GridDeleteButtonClick(args, property)) @onclick:stopPropagation="true" />
                            </Template>
                        </RadzenDataGridColumn>
                    </Columns>
                </RadzenDataGrid>
            </RadzenPanel>
        </RadzenColumn>
    </RadzenRow>
</RadzenStack>


<RadzenRow>
@*     <RadzenColumn SizeMD="4">
    </RadzenColumn> *@
    <RadzenColumn SizeMD="12">
        @* @if (isRates)
        {
        <RadzenPanel AllowCollapse="true" class="rz-my-10 rz-mx-auto" 
            Expand=@(() => Change("Panel expanded")) 
            Collapse=@(() => Change("Panel collapsed")) >
            <RadzenCard style="margin-top: 1rem;">
              <RatesTest></RatesTest>
            </RadzenCard>
        </RadzenPanel>
        } *@

        @if (showTabs)
        {
            <RadzenPanel AllowCollapse="true" class="rz-my-10 rz-mx-auto" style="margin-top: 10px !important;margin-bottom: 0px !important" 
                Expand=@(() => Change("Panel expanded")) 
                Collapse=@(() => Change("Panel collapsed"))>
                <RadzenTabs Change=@OnTabChange>
                    <Tabs>
                        <RadzenTabsItem Text="Property Details">
                            <PropertyDetails Id="@selectedPropId"></PropertyDetails>
                        </RadzenTabsItem>
                        <RadzenTabsItem Text="Property Cost" style="margin-left: 3px;">
                            @if (isPropCostTab)
                            {
                                <PropertyCost></PropertyCost>
                            }
                        </RadzenTabsItem>
                        <RadzenTabsItem Text="Property Description" style="margin-left: 3px;">
                            @if (isPropDescTab)
                            {
                                <PropertyDescription></PropertyDescription>
                            }
                        </RadzenTabsItem>
                        <RadzenTabsItem Text="Home Info" style="margin-left: 3px;">
                            @if (isPropHomeInfoTab)
                            {
                                <PropertyHomeInfo></PropertyHomeInfo>
                            }
                        </RadzenTabsItem>
                        <RadzenTabsItem Text="Rates" style="margin-left: 3px;">
                            @if (isPropRatesTab)
                            {
                                <RatesTest></RatesTest>
                            }
                        </RadzenTabsItem>
                        <RadzenTabsItem Text="All Bookings" style="margin-left: 3px;">
                            @if (isPropBookingsTab)
                            {
                                <Bookings Id="@selectedPropId"></Bookings>
                            }
                        </RadzenTabsItem>
                    </Tabs>
                </RadzenTabs>
            </RadzenPanel>
        }
    </RadzenColumn>
</RadzenRow>