@page "/booking-deposit-return"



<PageTitle>Deposit Return</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenTemplateForm TItem="Destination.Models.destinationTest.Booking" Data="@(booking)" Visible="@(booking != null)" Submit="@FormSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Cleaner" Component="CleanerId" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@cleaners" TextProperty="Firstname" ValueProperty="Cleanerid"
                                Placeholder="Select Cleaner" style="display: block; width: 100%" @bind-Value="@(booking.Cleaner)" Name="Cleaner" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Clean Date" Component="Cleandate" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(booking.Cleandate)" Name="Cleandate" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Hours" Component="CleanerAmount" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(booking.Cleaneramount)" Name="CleanerAmount" ShowUpDown="false" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Inspect Date" Component="Inspectdate" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(booking.Inspectdate)" Name="Inspectdate" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Inspected by" Component="InspectedBy" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@cleaners" TextProperty="Firstname" ValueProperty="Cleanerid"
                                Placeholder="Select Cleaner" style="display: block; width: 100%" @bind-Value="@(booking.Inspectedby)" Name="Inspectedby" />
            </RadzenColumn>
        </RadzenRow>


        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Deposit Paid" Component="Deposit" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric Disabled style="display: block; width: 100%" @bind-Value="@(booking.Deposit)" Name="Deposit" ShowUpDown="false" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Pet Dep Paid" Component="Petdeposit" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric Disabled style="display: block; width: 100%" @bind-Value="@(booking.Petdeposit)" Name="Petdeposit" ShowUpDown="false" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Cleaningcomp" Component="Cleaningcomp" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="2">
                <RadzenCheckBox @bind-Value="@(booking.Cleaningcomp)" Name="Cleaningcomp" />
            </RadzenColumn>
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Back to Back" Component="Backtoback" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="2">
                <RadzenCheckBox @bind-Value="@(booking.Backtoback)" Name="Backtoback" />
            </RadzenColumn>
        </RadzenRow>


        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Deposit Hold" Component="HoldDeposit" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="2">
                <RadzenCheckBox @bind-Value="@(booking.HoldDeposit)" Name="HoldDeposit" />
            </RadzenColumn>
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Deposit Returned" Component="Depositreturned" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="2">
                <RadzenCheckBox @bind-Value="@(booking.Depositreturned)" Name="Depositreturned" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Inspected" Component="Inspected" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="2">
                <RadzenCheckBox @bind-Value="@(booking.Inspected)" Name="Inspected" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Deposit Date" Component="Depositdate" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="8">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(booking.Depositdate)" Name="Depositdate" />
            </RadzenColumn>
        </RadzenRow>


        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Returned Amount" Component="Returnedamount" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="8">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(booking.Returnedamount)" Name="Returnedamount" ShowUpDown="false" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Inspection Notes" Component="Inspectionnotes" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="8">
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(booking.Inspectionnotes)" Name="Inspectionnotes" Rows="2" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="Cleaning Notes" Component="CleaningNotes" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="8">
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(booking.CleaningNotes)" Name="CleaningNotes" Rows="2" />
            </RadzenColumn>
        </RadzenRow>


        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="4">
                <RadzenLabel Text="DepositReturn Notes" Component="SecurityNotes" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="8">
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(booking.SecurityNotes)" Name="SecurityNotes" Rows="2" />
            </RadzenColumn>
        </RadzenRow>



        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Text="Submit" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>