@page "/booking-notes"

<PageTitle>Bookings Notes</PageTitle>

<RadzenColumn SizeMD=12>
    <RadzenTemplateForm TItem="Destination.Models.destinationTest.Booking" Data="@(bookingNotes)" Visible="@(bookingNotes != null)" Submit="@FormSubmit">
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Booking ID" Component="Id" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric Disabled style="display: block; width: 100%" @bind-Value="@(bookingNotes.Id)" Name="Id" ShowUpDown="false"/>
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Inquiry Date" Component="InquiryDate" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(bookingNotes.InquiryDate)" Name="InquiryDate" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Property" Component="Property" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@(propertiesForPropertyid)" TextProperty="Name" ValueProperty="Propid"
                                Placeholder="Choose Property" style="display: block; width: 100%" @bind-Value="@(bookingNotes.Propertyid)" Name="Propertyid" />
            </RadzenColumn>
        </RadzenRow>


        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Checkin" Component="Checkin" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(bookingNotes.Checkin)" Name="Checkin" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Checkout" Component="Checkout" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenTextBox style="display: block; width: 100%" @bind-Value="@(bookingNotes.Checkout)" Name="Checkout" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="First Date" Component="Datefrom" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(bookingNotes.Datefrom)" Name="Datefrom" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Last Date" Component="Dateto" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(bookingNotes.Dateto)" Name="Dateto" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Agent" Component="SalesAgent" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@agentList" TextProperty="Name" ValueProperty="Value"
                                Placeholder="Select Agent" style="display: block; width: 100%"
                                @bind-Value="@(bookingNotes.SalesAgent)" Name="SalesAgent" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Booking Status" Component="BookingStatus" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@(bookingStatusesForStatusid)" TextProperty="Status" ValueProperty="Id"
                                Placeholder="Choose BookingStatus" style="display: block; width: 100%" @bind-Value="@(bookingNotes.Statusid)" Name="Statusid" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Nights" Component="Nights" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(bookingNotes.Nights)" Name="Nights" ShowUpDown="false" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Guests" Component="Guests" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenNumeric style="display: block; width: 100%" @bind-Value="@(bookingNotes.Guests)" Name="Guests" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Source" Component="SourceId" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDropDown Data="@propertySourcesForSourceid" TextProperty="Source" ValueProperty="Id"
                                Placeholder="Select Source" style="display: block; width: 100%" @bind-Value="@(bookingNotes.Sourceid)" Name="Sourceid" />
            </RadzenColumn>
        </RadzenRow>
        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="3">
                <RadzenLabel Text="Last Updated" Component="LastUpdated" style="width: 100%" />
            </RadzenColumn>
            <RadzenColumn SizeMD="9">
                <RadzenDatePicker DateFormat="MM/dd/yyyy" style="display: block; width: 100%" @bind-Value="@(bookingNotes.LastUpdated)" Name="LastUpdated" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="12">
                <RadzenLabel Text="Tenant Remarks" Component="Remarks" style="width: 100%" />
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(bookingNotes.Remarks)" Name="Remarks" Rows="3" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenRow style="margin-bottom: 1rem">
            <RadzenColumn SizeMD="12">
                <RadzenLabel Text="Prebooking Notes" Component="PrebookingNotes" style="width: 100%" />
                <RadzenTextArea style="display: block; width: 100%" @bind-Value="@(bookingNotes.PrebookingNotes)" Name="PrebookingNotes" Rows="4" />
            </RadzenColumn>
        </RadzenRow>

        <RadzenStack Orientation="Orientation.Horizontal" AlignItems="AlignItems.Center" JustifyContent="JustifyContent.End" Gap="0.5rem">
            <RadzenButton ButtonStyle="ButtonStyle.Primary" ButtonType="ButtonType.Submit" Text="Submit" Variant="Variant.Flat" />
        </RadzenStack>
    </RadzenTemplateForm>
</RadzenColumn>
