@inherits LayoutComponentBase
<RadzenDialog />
<RadzenNotification />
<RadzenTooltip />
<RadzenContextMenu />
<RadzenLayout style="grid-template-areas: 'rz-sidebar rz-header' 'rz-sidebar rz-body'">
    <RadzenHeader>
        <RadzenRow JustifyContent="JustifyContent.Start" AlignItems="AlignItems.Center" Gap="0">
            <RadzenColumn Size="5">
                <RadzenSidebarToggle Click="@SidebarToggleClick"></RadzenSidebarToggle>
            </RadzenColumn>
            <RadzenColumn Size="7">
                <RadzenStack AlignItems="AlignItems.Center" Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End"></RadzenStack>
            </RadzenColumn>
        </RadzenRow>
    </RadzenHeader>
    <RadzenBody Expanded="@sidebarExpanded">
        <RadzenRow class="rz-mx-auto rz-px-4 rz-pt-2 rz-pt-md-4 rz-pt-lg-6 rz-pt-xl-12 rz-pb-2 rz-pb-lg-12" Style="max-width: 1440px;">
            <RadzenColumn Size="12">
            @Body
            </RadzenColumn>
        </RadzenRow>
    </RadzenBody>
    <RadzenSidebar @bind-Expanded="@sidebarExpanded" style="z-index: 2">
        <RadzenStack AlignItems="Radzen.AlignItems.Center" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding); border-bottom: var(--rz-panel-menu-item-border);">
            <RadzenImage Path="images/logo.png"  style="width: 48px; height: 48px;" AlternateText="Application logo"></RadzenImage>
            <RadzenText Text="Destination" TextStyle="Radzen.Blazor.TextStyle.Subtitle1" class="rz-mb-0" style="color: var(--rz-sidebar-color);" />
        </RadzenStack>
            <RadzenPanelMenu>
            <RadzenPanelMenuItem Text="Home" Path="" />
            <RadzenPanelMenuItem Text="Bookings" Path="booking-menu" />
            <RadzenPanelMenuItem Text="Accounting" Path="accounting-menu" />
            <RadzenPanelMenuItem Text="Channels" Path="channel-menu" />
            <RadzenPanelMenuItem Text="Cleaning" Path="cleaning-menu" />
            <RadzenPanelMenuItem Text="Communications" Path="communication-menu" />
            <RadzenPanelMenuItem Text="Guests" Path="guest-menu" />
            <RadzenPanelMenuItem Text="Home Team" Path="home-team-menu" />
            <RadzenPanelMenuItem Text="Inspections" Path="inspections-menu" />
            <RadzenPanelMenuItem Text="Maintenance" Path="maintenance-menu" />
            <RadzenPanelMenuItem Text="Marketing" Path="marketing-menu" />
            <RadzenPanelMenuItem Text="Operations" Path="operations-menu" />
            <RadzenPanelMenuItem Text="Owner" Path="owner-menu" />
            <RadzenPanelMenuItem Text="Properties" Path="property-menu" />
            <RadzenPanelMenuItem Text="Rates" Path="rates-menu" />
            <RadzenPanelMenuItem Text="Reports" Path="reports-menu" />
            <RadzenPanelMenuItem Text="Statements" Path="statements-menu" />
            <RadzenPanelMenuItem Text="Team" Path="team-menu" />
            <RadzenPanelMenuItem Text="Utilities" Path="utilities-menu" />
            <RadzenPanelMenuItem Text="Website" Path="website-menu" />
            <RadzenPanelMenuItem Text="Yield Management" Path="yield-management-menu" />
            <RadzenPanelMenuItem Text="All Menus" Path="all--menus" />
        </RadzenPanelMenu>
        <RadzenStack AlignItems="Radzen.AlignItems.Center" Gap="0" class="rz-py-4 rz-py-lg-6" Style="padding: var(--rz-panel-menu-item-padding);">
            <RadzenText Text="Destination v1.0.0" TextStyle="Radzen.Blazor.TextStyle.Caption" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
            <RadzenText Text="Copyright â’¸ 2025" TextStyle="Radzen.Blazor.TextStyle.Caption" class="rz-mb-0" TagName="Radzen.Blazor.TagName.P" TextAlign="Radzen.TextAlign.Center" />
        </RadzenStack>
    </RadzenSidebar>
</RadzenLayout>
